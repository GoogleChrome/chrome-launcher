{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "dist",
        "target": "es2019",
        "declaration": true,
        "noImplicitAny": true,
        "inlineSourceMap": true,
        "noEmitOnError": false,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowSyntheticDefaultImports": true,
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src",
    ]
}
