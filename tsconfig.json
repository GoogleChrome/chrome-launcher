{
    "compilerOptions": {
        "module": "ES2020",
        "moduleResolution": "node",
        "outDir": "dist",
        "target": "es2020",
        "declaration": true,
        "noImplicitAny": true,
        "noEmitOnError": false,
        "strict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowSyntheticDefaultImports": true,
    },
    "include": [
        "src",
        "types",
    ],
}
