{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "declaration": true,
        "noImplicitAny": true,
        "inlineSourceMap": true,
        "noEmitOnError": false,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "lib": [
            "es2015",
            "es2016.array.include"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "*.ts"
    ]
}